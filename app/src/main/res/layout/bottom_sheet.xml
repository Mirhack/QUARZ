<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <TextView
        android:id="@+id/bottom_sheet_wifi_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Password"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_wifi_ssid_title" />

    <TextView
        android:id="@+id/bottom_sheet_wifi_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/bottom_sheet_barcode_type"
        app:layout_constraintTop_toTopOf="@+id/bottom_sheet_wifi_password_title"
        tools:text="Hotspot password" />

    <TextView
        android:id="@+id/bottom_sheet_wifi_ssid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SSID"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_barcode_type_title" />

    <TextView
        android:id="@+id/bottom_sheet_wifi_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/bottom_sheet_barcode_type"
        app:layout_constraintTop_toTopOf="@+id/bottom_sheet_wifi_ssid_title"
        tools:text="Hotspot name" />

    <TextView
        android:id="@+id/bottom_sheet_barcode_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barcode Type"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottom_sheet_barcode_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_barcode_type_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="WIFI" />

    <TextView
        android:id="@+id/bottom_sheet_barcode_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_wifi_password_title" />

    <Button
        android:id="@+id/bottom_sheet_btn_copy_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_barcode_text"
        tools:text="Connect or Copy password" />


</androidx.constraintlayout.widget.ConstraintLayout>